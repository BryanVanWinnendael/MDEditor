{
  "name": "Noted",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/BryanVanWinnendael/Noted",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "preview": "vite preview",
    "es": "concurrently -k \"cross-env BROWSER=none npm run dev\" \"yarn electron:start\"",
    "eb": "npm run build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron .",
    "format": "npx prettier --write ."
  },
  "build": {
    "extends": null,
    "appId": "Noted",
    "win": {
      "target": "nsis"
    },
    "icon": "icon.ico",
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "license": "license.md",
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "uninstallDisplayName": "Noted"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "dependencies": {
    "@calumk/editorjs-codeflask": "^1.0.10",
    "@calumk/editorjs-paragraph-linebreakable": "^1.0.0",
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@editorjs/checklist": "^1.6.0",
    "@editorjs/delimiter": "^1.4.0",
    "@editorjs/editorjs": "^2.28.2",
    "@editorjs/header": "^2.8.1",
    "@editorjs/list": "^1.9.0",
    "@editorjs/paragraph": "^2.11.3",
    "@editorjs/quote": "^2.6.0",
    "@editorjs/simple-image": "^1.6.0",
    "@editorjs/table": "^2.3.0",
    "@electron/remote": "^2.1.2",
    "@emotion/react": "11",
    "@emotion/styled": "11",
    "@heroicons/react": "^1.0.6",
    "@mikecousins/react-pdf": "^7.0.4",
    "@mindfiredigital/react-canvas-editor": "^1.3.1",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/draft-js": "^0.11.9",
    "@types/jest": "^28.1.1",
    "allotment": "^1.20.0",
    "blob-stream": "^0.1.3",
    "dayjs": "^1.11.10",
    "editorjs-break-line": "^1.0.9",
    "electron-is-dev": "2.0.0",
    "electron-updater": "^6.1.7",
    "file-loader": "^6.2.0",
    "focus-visible": "^5.2.0",
    "framer-motion": "9.1.7",
    "hex-rgb": "^5.0.0",
    "immutable": "^4.1.0",
    "jspdf": "^2.5.1",
    "lodash.debounce": "^4.0.8",
    "pdfjs-dist": "^4.0.379",
    "pdfkit": "^0.13.0",
    "perfect-freehand": "^1.2.2",
    "polished": "^4.2.2",
    "react": "^18.1.0",
    "react-colorful": "^5.6.1",
    "react-dom": "^18.1.0",
    "react-editor-js": "^2.1.0",
    "react-hotkeys-hook": "^4.4.4",
    "react-icons": "^4.12.0",
    "react-resizable-panels": "^1.0.8",
    "roughjs": "^4.6.6",
    "typescript": "^4.7.3",
    "wallpaper": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@types/editorjs__header": "^2.6.3",
    "@types/lodash.debounce": "^4.0.9",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.35",
    "prettier": "3.1.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.4",
    "wait-on": "^5.2.1"
  }
}
