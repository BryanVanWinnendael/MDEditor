{
  "name": "noted",
  "version": "1.0.0",
  "private": true,
  "repository": "https://github.com/BryanVanWinnendael/Noted",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@editorjs/checklist": "^1.6.0",
    "@editorjs/editorjs": "^2.28.2",
    "@editorjs/header": "^2.8.1",
    "@editorjs/list": "^1.9.0",
    "@editorjs/paragraph": "^2.11.3",
    "@editorjs/quote": "^2.6.0",
    "@editorjs/simple-image": "^1.6.0",
    "@electron/remote": "^2.1.2",
    "@emotion/react": "11",
    "@emotion/styled": "11",
    "@heroicons/react": "^1.0.6",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^13.5.0",
    "@tiptap/pm": "^2.1.16",
    "@tiptap/react": "^2.1.16",
    "@tiptap/starter-kit": "^2.1.16",
    "@types/draft-js": "^0.11.9",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.41",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "dayjs": "^1.11.10",
    "electron-is-dev": "2.0.0",
    "electron-updater": "^6.1.7",
    "file-loader": "^6.2.0",
    "focus-visible": "^5.2.0",
    "framer-motion": "9.1.7",
    "fs": "^0.0.1-security",
    "hex-rgb": "^5.0.0",
    "immutable": "^4.1.0",
    "lodash.debounce": "^4.0.8",
    "polished": "^4.2.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "react-editor-js": "^2.1.0",
    "react-hotkeys-hook": "^4.4.4",
    "react-icons": "^4.12.0",
    "react-resizable-panels": "^1.0.8",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^4.7.3",
    "wallpaper": "5.0.1",
    "web-vitals": "^2.1.4"
  },
  "main": "public/main.js",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "format": "yarn prettier . --write",
    "es": "concurrently -k \"cross-env BROWSER=none yarn start\" \"yarn electron:start\"",
    "eb": "yarn build && electron-builder -c.extraMetadata.main=build/main.js",
    "electron:start": "wait-on tcp:3000 && electron ."
  },
  "build": {
    "extends": null,
    "appId": "Noted",
    "win": {
      "target": "nsis"
    },
    "icon": "icon.ico",
    "nsis": {
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico",
      "license": "license.md",
      "oneClick": false,
      "allowToChangeInstallationDirectory": false,
      "uninstallDisplayName": "Noted-uninstaller"
    },
    "files": [
      "dist/**/*",
      "build/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "assets"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/editorjs__header": "^2.6.3",
    "@types/lodash.debounce": "^4.0.9",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "20.1.0",
    "electron-builder": "^24.9.1",
    "prettier": "3.1.1",
    "wait-on": "^5.2.1"
  }
}
