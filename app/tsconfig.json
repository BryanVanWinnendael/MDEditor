{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": "./src",
    "paths": {
      "assets/*": ["assets/*"],
      "components/*": ["components/*"],
      "contexts/*": ["contexts/*"],
      "hooks/*": ["hooks/*"],
      "styling/*": ["styling/*"],
      "types/*": ["types/*"],
      "utils/*": ["utils/*"],
      "screens/*": ["screens/*"],
      "lib/*": ["lib/*"]
    }
  },
  "include": ["src", "electron", "**/*.ts", "**/*.tsx", "global.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
